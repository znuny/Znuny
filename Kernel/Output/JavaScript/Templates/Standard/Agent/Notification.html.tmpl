<div class="MessageBox {{ Class }}"{% if ID %} id="{{ ID }}"{% endif %}>
    {% if Icon %}
    <span>
        <i class="fa {{ Icon }}"></i>
    </span>
    {% endif %}
    <p>
        <a href="{{ URL|safe }}">
            {{ Text }}
        </a>
    </p>
    <a class="Close icon-hover" title="{{ "Close this message" | Translate }}" href="#">
        <i class="fa fa-times"></i>
    </a>
</div>
