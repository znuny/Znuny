    <div class="DnDUpload" tabindex="0" role="button"
        aria-label="{{ 'Click to select a file for upload.' | Translate }}">
        <div class="ReadyForUpload">
            <span class="btn-main btn-width-xxl btn-primary">
                {% if IsMultiple %}
                {{ 'Select files or drop them here' | Translate }}
                {% else %}
                {{ 'Select a file or drop it here' | Translate }}
                {% endif %}
            </span>
        </div>

        <span class="UploadRunning">{{ 'Uploading...' | Translate }}</span>
    </div>